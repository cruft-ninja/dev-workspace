#!/bin/bash

if [ -z "$1" ]; then
    echo "Usage: $0 [command]"
    echo ""
    echo "Available commands:"
    echo "  users - List logged in users"
    echo "  disk  - Show disk usage"
    echo "  mem   - Show memory usage"
    echo "  ps    - Show running processes"
    echo "  net   - Show network status"
    exit 1
fi

case "$1" in
    users)
        echo "Logged in users:"
        who
        ;;
    disk)
        echo "Disk usage:"
        df -h
        ;;
    mem)
        echo "Memory usage:"
        free -h
        ;;
    ps)
        echo "Running processes:"
        ps aux
        ;;
    net)
        echo "Network status:"
        ss -tuln
        ;;
    *)
        echo "Unknown command: $1"
        exit 1
        ;;
esac
